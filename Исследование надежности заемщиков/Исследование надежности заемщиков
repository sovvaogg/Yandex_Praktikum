     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "# с первого взгляда видно, что строки в столбце \"цель получения кредита\" весьма разнообразны, проверим насколько\n",
    "data['purpose'].value_counts()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 20,
   "metadata": {},
   "outputs": [],
   "source": [
    "# в графе  очень много одинаковых целей, но указанны они разными способами. Определим самые частые,\n",
    "# лемматизируем их, и создадим новый столбец с четким определением цели\n",
    "from pymystem3 import Mystem\n",
    "m = Mystem()\n",
    "def purpose_lemma(row):\n",
    "    purpose = m.lemmatize(row['purpose'])\n",
    "    if 'образование' in purpose:\n",
    "        return 'образование'\n",
    "    elif 'автомобиль' in purpose:\n",
    "        return 'автомобиль'\n",
    "    elif 'недвижимость' in purpose:\n",
    "        return 'недвижимость'\n",
    "    elif 'свадьба' in purpose:\n",
    "          return 'свадьба'\n",
    "    elif 'жилье' in purpose:\n",
    "        return 'жилье'\n",
    "data['purpose_lemma'] = data.apply(purpose_lemma, axis=1)"
   ]
  },
